<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CD-Конструктор" Height="400" Width="930" MinWidth="300" MinHeight="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="CD-Конструктор" Margin="5">
            <StackPanel>

                <StackPanel Orientation="Horizontal" Margin="5">
                    <Label Content="Розмір блока" Width="120"/>
                    <TextBox Text="100 000" Width="100"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="5">
                    <Button Content="Папка CD-in" Width="100"/>
                    <Label Content="" Margin="5 0 0 0" Width="770"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="5,5,5,5">
                <Label Content="Об'єднання (1)" Margin="5"/>
                <Label Content="Заміна (2)" Margin="5"/>
                <Label Content="Висок більших (3)" Margin="5"/>
            </StackPanel>

            <Grid Grid.Column="1" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <CheckBox Grid.Row="0" Content="Статистика" Margin="5"/>
                <CheckBox Grid.Row="1" Content="Без платки 'CD-out'" Margin="5"/>
            </Grid>
        </Grid>
        <ProgressBar Grid.Row="3" Height="20" Margin="5" Value="0" Maximum="100">
            <ProgressBar.Foreground>
                <SolidColorBrush Color="LightGreen"/>
            </ProgressBar.Foreground>
        </ProgressBar>

        <Grid Grid.Row="5" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="Відмінити" Margin="5"/>
            <Button Grid.Column="1" Content="Виконати" Margin="5"/>
        </Grid>
    </Grid>
</Window>